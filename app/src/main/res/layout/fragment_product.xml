<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"

    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/lightbg"
        android:orientation="vertical"
        tools:context=".activty_classes.prodfrag">


        <TextView
            android:layout_width="350dp"
            android:layout_marginLeft="10dp"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:text="Product Master"
            android:layout_marginTop="30dp"
            android:textColor="@color/caveo"
            android:textSize="30sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="left"
                android:text="Use the below search field:"
                android:textColor="@color/caveo"
                android:textSize="15sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/new_prod"
                android:textColorHint="@color/caveo2"
                android:layout_gravity="end"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:textColor="@color/white"
                android:hint="ADD +"
                android:background="@drawable/gradcav"
                android:textSize="15sp" />


        </LinearLayout>





        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/prod_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="0.5"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/prod_icon"
                android:drawablePadding="9dp"
                android:hint="Enter Product Name"
                android:inputType="text"
                android:padding="10dp"
                android:textColor="@color/caveo"
                android:textColorHint="@color/caveo" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/prod_search"
                android:layout_width="130dp"
                android:textColorHint="@color/caveo"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/gradcav"
                android:hint="Search"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:layout_gravity="center"
            android:layout_width="350dp"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/sno_prod"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="S.No"
                android:textAlignment="center" />


            <TextView
                android:id="@+id/name_prod"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="30dp"
                android:textStyle="bold"
                android:text="Product Name"
                android:textAlignment="center" />

            <TextView
                android:id="@+id/sale_rate_prod"
                android:layout_weight="1"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="30dp"
                android:text="Sale Rate (Rs.)"
                android:textAlignment="center" />
        </LinearLayout>
        <ListView
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/rc_prod">
        </ListView>

    </LinearLayout>


</RelativeLayout>

